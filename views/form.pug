html
   head
      title Form Tester
      script(type='text/javascript' src="../form.js")
   body

    form(action = "/clear", method = "GET")
     label(for = "value") Clear Template before new creation:
     button(type = "submit")  CLEAR

    h3 Select Your Components

    div
     form(action='/' method="post")
      label(for='components') Select Component 
      select(name='dropDown', id='')
       each component in Components
        option=component
      input(type='submit', value='Submit')
    br
    br
    if component
     div
      form(action='/' method="post")
       label(for = "value") Enter Component Value:
       textarea(name = "value" value = "")
       button(type = "submit", value="Submit") Insert  

       
